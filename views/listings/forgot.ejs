<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Forgot Password</title>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <% if (message) { %>
    <script>Swal.fire({ icon: "<%= alertType %>", title: "<%= message %>" });</script>
  <% } %>

  <h1>Forgot Password</h1>
  <form action="/forgot" method="post">
    <label>Email:</label>
    <input type="email" name="email" required>
    <button type="submit" style="background-color:blueviolet">Send OTP</button>
  </form><br>

  <a href="/login">Back to login</a>
</body>
</html>
