<script>
const totalPriceElement = document.getElementById('totalPrice');
const deliveryCharge = 40; // delivery charge

// Food-price mapping (aap yaha apne hisaab se foods add kar sakte ho)
const foodPrices = {
    "Maggi": 25,
    "Veg pasta": 90,
    "Cheese pasta": 125,
    "Egg roll": 50,
    "Paneer roll": 60,
    "Chicken roll": 70, "Chole bature": 35, "Veg pakoda": 80, "Panner pakoda": 120,
    "Chicken pakoda": 150, "Fried chicken": 210, "Chicken wings": 110, "Chicken leg": 120,
    "Mushroom roll": 80
};

// Function to update price total
function updatePrice() {
    let total = 0;

    // ‡§∏‡§æ‡§∞‡•á price fields ‡§ï‡§æ sum
    const priceInputs = document.querySelectorAll('[id^="price-"]');
    priceInputs.forEach(input => {
        total += parseInt(input.value) || 0;
    });

    // delivery charge condition
    if (total >= 500) {
        deliveryMsg.textContent = "üéâ Free Delivery (on orders above ‚Çπ500)";
    } else {
        total += deliveryCharge;
        deliveryMsg.textContent = "‚Çπ40 delivery charge applied";
    }

    // total display
    totalPriceElement.textContent = total.toLocaleString("en-IN");
}


// Function to set price automatically when food name entered
function attachFoodListeners(foodInput, priceInput) {
    foodInput.addEventListener("input", () => {
        const foodName = foodInput.value.trim();
        if (foodPrices[foodName]) {
            priceInput.value = foodPrices[foodName];
        } else {
            priceInput.value = ""; // agar match na mile to blank
        }
        updatePrice();
    });

    // price input change hone par bhi update
    priceInput.addEventListener("input", updatePrice);
}

// Add multiple food items with remove option
let foodCount = 1;
document.getElementById('addFoodBtn').addEventListener('click', function() {
    foodCount++;
    const container = document.getElementById('foodContainer');
    const newDiv = document.createElement('div');
    newDiv.className = 'form-group';
    newDiv.innerHTML = `
        <label for="food-${foodCount}">Food Item ${foodCount}</label>
        <input type="text" id="food-${foodCount}" name="food_${foodCount}" required placeholder="Enter food name">
        <input type="number" id="price-${foodCount}" name="price_${foodCount}" required placeholder="Price" min="1">
        <button type="button" class="removeBtn">‚ùå Remove</button>
    `;
    container.appendChild(newDiv);

    const foodInput = newDiv.querySelector(`#food-${foodCount}`);
    const priceInput = newDiv.querySelector(`#price-${foodCount}`);

    // automatic price attach
    attachFoodListeners(foodInput, priceInput);

    // remove button
    newDiv.querySelector('.removeBtn').addEventListener('click', function() {
        newDiv.remove();
        updatePrice();
    });
});

// first food item ke liye listeners
const firstFood = document.getElementById('food-1');
const firstPrice = document.getElementById('price-1');
attachFoodListeners(firstFood, firstPrice);

// initial calculation
updatePrice();





 document.getElementById("orderForm").addEventListener("submit", async function(e) {
    e.preventDefault();

    const form = e.target;
    const formData = new FormData(form);

    // total price hidden field update
    formData.set("totalPrice", totalPriceElement.textContent);

    // ‚úÖ 1. Web3Forms (Gmail ‡§ï‡•á ‡§≤‡§ø‡§è)
    formData.append("access_key", "1f937280-f43a-482b-b121-466444023e0f");
    formData.append("redirect", "https://yoursite.com/thank-you");

    fetch("https://api.web3forms.com/submit", {
        method: "POST",
        body: formData
    });

    // ‚úÖ 2. Apne backend (MongoDB save ‡§ï‡§∞‡§®‡•á ‡§ï‡•á ‡§≤‡§ø‡§è)
    fetch("/place-order", {
        method: "POST",
        body: formData
    }).then(() => {
        window.location.href = "/my-orders";
    });
});



// UPI ID
const upiID = "7667880272@ybl";

// Function to open UPI app
function payViaUPI(app) {
    const amount = totalPriceElement.textContent.replace(/,/g, ''); // total amount
    let upiLink = `upi://pay?pa=${upiID}&pn=Your%20Name&am=${amount}&cu=INR`;

    if(app === "phonepe") {
        // PhonePe specific link (ya generic UPI link chalega)
        window.location.href = upiLink;
    } else if(app === "gpay") {
        // Google Pay link
        window.location.href = upiLink;
    }
}

// Attach click events
document.getElementById("phonepePay").addEventListener("click", () => payViaUPI("phonepe"));
document.getElementById("gpayPay").addEventListener("click", () => payViaUPI("gpay"));

 


</script>





