<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
     <link rel="stylesheet" href="/css/signup.css" />
</head>
<body>
   
    <div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Restaurants</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label><br>
                <input name="username" id="username" type="text" class="form-control" required>
                
            </div></br></br>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label><br>
                <input name="email" id="email" type="email" class="form-control" required>
                
            </div></br></br>
           
            <div class="mb-3">
                <label for="password" class="form-label">Password</label><br>
                <input name="password" id="password" type="password" class="form-control"  required style="padding-right: 40px;">
                 <button class="btn btn-outline-secondary" type="button" id="togglePassword">
            👁️
        </button>
                
            </div>
        </br></br>
            <button class="btn btn-success">Signup</button> </br></br> <a href="/login">login</a> 
        </form>
    </div>
</div>
<script>
    const passwordField = document.getElementById("password");
    const toggleButton = document.getElementById("togglePassword");

    toggleButton.addEventListener("click", function () {
        const type = passwordField.type === "password" ? "text" : "password";
        passwordField.type = type;
        this.textContent = type === "password" ? "👁️" : "🙈";
    });
</script>
</body>
</html>