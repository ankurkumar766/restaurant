<script>
    const searchInput = document.getElementById('searchInput');
    const cardLinks = document.querySelectorAll('.card-link');

    if (searchInput) {
        searchInput.addEventListener('input', function () {
            const query = this.value.trim().toLowerCase();

            // अगर query केवल नंबर है तो उसे price search मानेंगे
            const queryNumber = parseFloat(query.replace(/,/g, ''));

            cardLinks.forEach(cardLink => {
                const titleElement = cardLink.querySelector('.title');
                const priceElement = cardLink.querySelector('.price');

                const title = titleElement ? titleElement.textContent.toLowerCase() : '';
                const priceText = priceElement ? priceElement.textContent.replace(/[^0-9.]/g, '') : '';
                const priceValue = parseFloat(priceText);

                let show = false;

                // 1. If there is query text then search in title or price text
                if (isNaN(queryNumber)) {
                    if (title.includes(query) || (priceElement && priceElement.textContent.toLowerCase().includes(query))) {
                        show = true;
                    }
                }
                // 2. if query number then check price <= query
                else {
                    if (!isNaN(priceValue) && priceValue <= queryNumber) {
                        show = true;
                    }
                }

                cardLink.style.display = show ? 'block' : 'none';
            });
        });
    }
</script>

