/* Form Group (each label + input/select block) */
.form-group {
    margin-bottom: 18px; /* Space between form fields */
}

.form-group label {
    display: block; /* Make labels take full width */
    margin-bottom: 8px; /* Space between label and input */
    font-weight: 500; /* Slightly bolder labels */
    color: #343a40; /* Darker label text */
    font-size: 1.0em;
}

.form-group input[type="text"],
.form-group input[type="tel"],
.form-group select {
    width: 100%; /* Make inputs/selects take full width */
    padding: 12px; /* Inner padding */
    border: 1px solid #ced4da; /* Light grey border */
    border-radius: 6px; /* Rounded corners for inputs */
    font-size: 1.0em;
    color: #495057; /* Input text color */
    box-sizing: border-box; /* Include padding and border in the element's total width */
    transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.form-group input[type="text"]::placeholder,
.form-group input[type="tel"]::placeholder {
    color: #888; /* Placeholder text color */
}

.form-group input[type="text"]:focus,
.form-group input[type="tel"]:focus,
.form-group select:focus {
    border-color: #80bdff; /* Blue border on focus */
    outline: 0; /* Remove default outline */
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Subtle blue shadow on focus */
}

.form-group small {
    display: block; /* Make small text display on its own line */
    margin-top: 5px;
    font-size: 0.85em;
    color: #6c757d; /* Muted color for helper text */
}

