}

/* Button Styling (for "Cancel Order" or similar) */
.form-group button[type="submit"] {
    display: block; /* Make button take full width if desired, or use inline-block if next to another button */
    width: 100%; /* Full width button */
    padding: 12px 20px;
    background-color: #dc3545; /* Red color for "Cancel Order" as per common cancel buttons */
    color: white;
    border: none;
    border-radius: 6px; /* Rounded corners for button */
    font-size: 1.1em;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: 10px; /* Space above the button */
}

.form-group button[type="submit"]:hover {
    background-color: #c82333; /* Darker red on hover */
